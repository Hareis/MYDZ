@model IList<MYDZ.Entity.Goods.Item>
@*{
    Layout = null;
    int totalnum = int.Parse(ViewBag.TotalNum.ToString());
}*@

<table class="data_table" cellpadding="0" cellspacing="0" border="0">
    <colgroup>
        <col width="101" />
        <col width="260" />
        <col />
        <col width="115" />
        <col width="115" />
        <col width="115" />
        <col width="115" />
        <col width="160" />
        <col width="115" />
    </colgroup>
    <thead>
        <tr>
            <th>
                图片
            </th>
            <th>
                商品标题
            </th>
            <th>
                价格(￥)
            </th>
            <th>
                总销量(件)
            </th>
            <th>
                库存(件)
            </th>
            <th>
                最后修改时间
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    @foreach (MYDZ.Entity.Goods.Item item in Model)
    {
        <tbody>
            <tr>
                <td colspan="10">
                    <table cellpadding="0" cellspacing="0" width="100%" border="0" class="data_table_item">
                        <colgroup>
                            <col width="100" />
                            <col width="260" />
                            <col />
                            <col width="115" />
                            <col width="115" />
                            <col width="115" />
                            <col width="115" />
                            <col width="160" />
                            <col width="115" />
                        </colgroup>
                        <tr>
                            <td>
                                <a class="table_img" target="_blank" href="javascript:void();">
                                    <img src="@item.PicUrl" />
                                </a>
                            </td>
                            <td class="table_hight">
                                <a href="javascript:void(0);">@item.Title</a>
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.SoldQuantity
                            </td>
                            <td>
                                @item.Num
                            </td>
                            <td>
                                @item.Modified
                            </td>
                            <td>
                                <div>
                                    <p>
                                        <button>
                                            编辑宝贝</button>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </tbody>
    }
</table>

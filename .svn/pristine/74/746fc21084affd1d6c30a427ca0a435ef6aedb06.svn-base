.error_info {
    padding:9px; 
	color:#666; 
	position:absolute;
	display:none;
	line-height:20px;
	background-color:#FFECEC;
	border-radius:2px;
	border:#ff6600 1px solid;
}
.error_info i {
    position: absolute;
    left:-14px;
    width: 14px;
    height: 19px;
    overflow: hidden;
}
.error_info i:after {
    content: ".";
    display: block;
    position: absolute;
    background:#FFECEC;
    width: 17px;
    height: 17px;
    left: 8px;
    border: #ff6600 1px solid;
    -moz-transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
}

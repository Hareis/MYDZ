}
<style type="text/css">
    .item-title-div p a
    {
        color: #4682b4;
    }
    .editdiv a img
    {
        float: right;
        position: relative;
    }
    .edit-item-title
    {
        position: relative;
        top: -14px;
        display: block;
        text-indent: -9999em;
        width: 16px;
        height: 16px;
        overflow: hidden;
    }
    .edit-item-price, .edit-item-stoke
    {
        position: relative;
        width: 16px;
        top: -14px;
        display: block;
        text-indent: -9999em;
    }
    
    .item-title-div p
    {
        text-align: left;
        margin: 0px 5px;
        width: 160px;
    }
    .item-price-div p, .item-stoke-div p
    {
        width: 80px;
    }
    

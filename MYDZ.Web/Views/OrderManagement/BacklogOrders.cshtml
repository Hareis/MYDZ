    {
        width: 320px;
        height: 160px;
        border: 1px solid rgb(215, 215, 212);
        position: absolute;
        display: none;
        background-color: White;
        box-shadow: 5px 5px 3px #888888;
    }
    .float-div-addmarker ul li
    {
        float: left;
        margin-left: 12px;

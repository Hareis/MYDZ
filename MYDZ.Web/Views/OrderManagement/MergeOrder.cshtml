@{
    ViewBag.Title = "合并订单";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/js/jquery-1.11.1.min.js")" type="text/javascript"></script>
    <style>
        body {
	        margin:0px;
	        padding:0px;
	        text-align:left;
	        background-color: transparent;
	        font:12px Arial, Helvetica, sans-serif;
        }
        div,ul,li{
	        margin:0px;
	        padding:0px;
        }
        ul,li{
	        list-style:none;
        }
        td {
           text-align:left; 
           height:40px;
        }
        td.l {
           width:25px;
           padding-left:10px;
        }
        td.c {
           width:200px;
        }
        a {
            text-decoration:none;  
        }
        a:hover {
            text-decoration:underline;
        }
        .sdiv {
            padding:10px;
            display:none;
        }
    </style>
</head>
<body>
<table cellpadding="0" cellspacing="0" border="0" width="100%">
    <tr>
        <td class="l"><img src="/Images/Load.gif" style="height:18px;width:18px;" /></td>
        <td class="c">正在处理订单合并数据，请稍后...</td>
        <td class="r">&nbsp;</td>
    </tr>
</table>
<input type="hidden" name="NumberList" value="@ViewBag.NumberList" />
</body>
</html>
<script>
    var Merge = function () {
        var List = $("input[name=NumberList]").val().split(',');
        var wrap = window.parent.$(".frame_wrap");

        this.Page = {
            Init: function () {
                var base = this;
                $.post("/MergeOrder.html", { OrderNumber: List[0], OrderNumberList: List.join(','), count: List.length },
                    function (data, textStatus) {
                        if (!eval(data.Status)) {
                            alert(data.Msg);
                        }
                        base.CloseWindow();
                    }
                );
            },
            CloseWindow: function () {
                wrap.fadeOut(
                    function () {
                        window.parent.location.href = window.parent.location.href;
                    }
                );
            }
        };
    }

    $(document).ready(
        function () {
            new Merge().Page.Init();
        }
    );
</script>